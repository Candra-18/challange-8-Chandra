{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "class-methods-use-this": ["error", { "enforceForClassFields": false }]

    }
}
